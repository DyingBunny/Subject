#include<iostream>
using namespace std;
int Test(int n,int s)
{
    int num = s;
    int i = 0;
    for (i = 1; i < n; i++)
    {
        if (s== 1)
        {
            num = num+(n-i);//这个地方不要写成num=num+1；会导致复杂度过大
            break;
        }
        else if (s % 2 == 0)
        {
            num =  num+(s / 2);
            s = s / 2;
        }
        else
        {
            num = num+(s / 2) + 1;
            s = (s / 2) + 1;
        }
    }
    return num;
}
 
int main()
{
    int n ;
    int m ;
    int s;
    int num1, num2, num3;
    scanf("%d%d", &n, &m);
    for (s = 1; s <= 28000; s++)
    {
        num1 = Test(n, s);
        num2 = Test(n, s + 1);
        if (m >= num1&&m <num2)
        {
            break;
        }
    }
    printf("%d\n", s);
    system("pause");
    return 0;
}
